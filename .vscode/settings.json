{
    "git.enableCommitSigning": true,
    "debug.terminal.clearBeforeReusing": true,
    "clang-format.executable": "/usr/local/bin/clang-format",
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.cStandard": "c17",
    "[cpp]": {
        "editor.wordBasedSuggestions": false,
        "editor.suggest.insertMode": "replace",
        "editor.semanticHighlighting.enabled": true,
        "editor.insertSpaces": false,
        "editor.detectIndentation": false
    },
    "C_Cpp.files.exclude": {
        "**/.vscode": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true
    },
    "cmake.sourceDirectory": "${workspaceFolder}/builders/cmake",
    "cmake.buildDirectory": "${workspaceFolder}/builders/cmake/build",
    "clang-tidy.buildPath": "/Users/shiretu/Downloads/clang+llvm-13.0.0-x86_64-apple-darwin/bin/clang-tidy",
    "cmake.configureOnOpen": false,
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools"
}